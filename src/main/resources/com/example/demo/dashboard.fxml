<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      prefHeight="600.0" prefWidth="800.0" spacing="20" style="-fx-padding: 20;">

  <!-- Header -->
  <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" alignment="CENTER_LEFT" spacing="20">
    <Label text="Banking Dashboard" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"/>
    <Region HBox.hgrow="ALWAYS"/>
    <Label fx:id="welcomeLabel" text="Welcome, User!" style="-fx-text-fill: white;"/>
    <Label fx:id="customerInfoLabel" style="-fx-text-fill: white;"/>
    <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout"
            style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
  </HBox>

  <!-- Main Content -->
  <HBox spacing="20" VBox.vgrow="ALWAYS">
    <!-- Left Panel - Accounts List -->
    <VBox spacing="15" prefWidth="300">
      <Label text="My Accounts" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
      <ListView fx:id="accountsListView" VBox.vgrow="ALWAYS" onMouseClicked="#selectAccount"
                style="-fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
      <Label fx:id="selectedAccountLabel" text="No account selected"
             style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;"/>
    </VBox>

    <!-- Right Panel - Transactions -->
    <VBox spacing="15" VBox.vgrow="ALWAYS">
      <!-- Deposit Section -->
      <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
        <Label text="Deposit" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
          <TextField fx:id="depositAmountField" promptText="Amount" prefWidth="150"/>
          <Button text="Deposit" onAction="#handleDeposit"
                  style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
      </VBox>

      <!-- Withdrawal Section -->
      <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
        <Label text="Withdraw" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
          <TextField fx:id="withdrawAmountField" promptText="Amount" prefWidth="150"/>
          <Button text="Withdraw" onAction="#handleWithdraw"
                  style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
      </VBox>

      <!-- Actions Section -->
      <HBox spacing="10" alignment="CENTER">
        <Button text="View Transactions" onAction="#handleViewTransactions"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text="Open New Account" onAction="#handleOpenNewAccount"
                style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text="Manage Profile" onAction="#handleManageProfile"
                style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold;"/>
      </HBox>
    </VBox>
  </HBox>
</VBox>