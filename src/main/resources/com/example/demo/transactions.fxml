<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo.controllers.TransactionController"
      spacing="20.0" style="-fx-padding: 20;">

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Transaction History" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Refresh" onAction="#handleRefresh"
                style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        <Button text="Print" onAction="#handlePrint"
                style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
        <Button text="Back to Dashboard" onAction="#handleBack"
                style="-fx-background-color: #7f8c8d; -fx-text-fill: white;"/>
    </HBox>

    <VBox spacing="15.0" alignment="CENTER_LEFT"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;">

        <Label fx:id="accountInfoLabel" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

        <Separator style="-fx-padding: 10 0 10 0;"/>

        <Label text="Recent Transactions" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

        <ListView fx:id="transactionsListView" VBox.vgrow="ALWAYS"
                  style="-fx-pref-height: 400; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
    </VBox>
</VBox>