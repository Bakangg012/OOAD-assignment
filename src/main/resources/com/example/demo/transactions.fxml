<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.controllers.TransactionsController">
    <top>
        <ToolBar>
            <Button text="â† Back to Dashboard" onAction="#backToDashboard" />
            <Label text="Transactions" style="-fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="New Transaction" onAction="#newTransaction" />
        </ToolBar>
    </top>
    <center>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Transaction History" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <TableView fx:id="transactionsTable" prefHeight="400">
                <columns>
                    <TableColumn text="Date" prefWidth="150"/>
                    <TableColumn text="Type" prefWidth="100"/>
                    <TableColumn text="Amount" prefWidth="120"/>
                    <TableColumn text="Description" prefWidth="200"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>