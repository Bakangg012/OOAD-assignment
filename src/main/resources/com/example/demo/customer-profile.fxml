<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.controllers.ProfileController">
    <top>
        <ToolBar>
            <Button text="â† Back to Dashboard" onAction="#backToDashboard" />
            <Label text="Customer Profile" style="-fx-font-weight: bold;"/>
        </ToolBar>
    </top>
    <center>
        <VBox spacing="15" alignment="CENTER" prefWidth="400">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <Label text="Your Profile" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="15">
                <Label text="Customer ID:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="customerIdLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Name:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Label fx:id="customerNameLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Total Accounts:" style="-fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Label fx:id="totalAccountsLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Total Balance:" style="-fx-font-weight: bold;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Label fx:id="totalBalanceLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <Button text="Edit Profile" onAction="#editProfile" style="-fx-font-size: 14px;"/>
        </VBox>
    </center>
</BorderPane>